{
  "name": "card-estimation-game-v2",
  "version": "2.0.0",
  "description": "Professional Multiplayer Card Estimation Game - Beta 2.0",
  "main": "src/server/app.js",
  "type": "module",
  "scripts": {
    "dev:server": "cross-env NODE_ENV=development nodemon src/server/app.js",
    "dev:dashboard": "vite --config vite.config.js --port 5173",
    "dev:gameroom": "vite --config vite.config.js --port 5174",
    "start": "cross-env NODE_ENV=production node src/server/app.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "preview": "vite preview",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev:dashboard\" \"npm run dev:gameroom\"",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker build -t card-game-v2 .",
    "docker:run": "docker run -p 3000:3000 card-game-v2"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^7.0.1",
    "@vitejs/plugin-vue": "^6.0.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "fastify-socket.io": "^5.0.0",
    "joi": "^17.11.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "redis": "^4.6.12",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.1",
    "vite": "^7.0.3",
    "vue": "^3.5.17"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.4",
    "nodemon": "^3.0.2",
    "style-loader": "^3.3.3",
    "supertest": "^6.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "card-game",
    "multiplayer",
    "real-time",
    "websocket",
    "fastify",
    "estimation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/card-estimation-game-v2.git"
  }
}
